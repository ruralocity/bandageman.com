{% extends "base.html.j2" %}

{% block extra_head %}
<style>
    * {
        box-sizing: border-box;
    }
    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        width: 100%;
    }
    body {
        background-color: black;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
    .logo {
        max-width: 100%;
        max-height: 50vh;
        object-fit: contain;
        margin-bottom: 2rem;
        cursor: pointer;
    }
    .logo:hover {
        animation: shake 0.5s ease;
    }
    @keyframes shake {
        0%, 100% { transform: rotate(0deg); }
        10%, 30%, 50%, 70%, 90% { transform: rotate(-2deg); }
        20%, 40%, 60%, 80% { transform: rotate(2deg); }
    }
    .games {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        max-width: 1200px;
        width: 100%;
        padding: 0 1rem;
    }
    @media (min-width: 600px) {
        .games {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            padding: 0 2rem;
        }
    }
    @media (min-width: 900px) {
        .games {
            grid-template-columns: repeat(3, 1fr);
        }
    }
    .game-link {
        display: block;
    }
    .game-link img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.2s ease;
    }
    .game-link img:hover {
        transform: scale(1.05);
    }
    .coming-soon {
        width: 100%;
        aspect-ratio: 1;
        background-color: #1a1a1a;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        border: 2px solid #333;
        transition: transform 0.2s ease;
    }
    .coming-soon:hover {
        transform: scale(1.05);
    }
    .coming-soon img {
        max-width: 80px;
        height: auto;
        opacity: 0.3;
    }
    .coming-soon-text {
        color: #555;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-size: 14px;
        text-transform: lowercase;
    }
    .footer-heart-mobile {
        display: none;
    }
    @media (max-width: 599px) {
        .footer-heart-desktop {
            display: none;
        }
        .footer-heart-mobile {
            display: inline;
        }
    }
</style>
{% endblock %}

{% block content %}
<img src="/images/bandageman.png" alt="Bandageman Studios" class="logo">
<div class="games">
    {% for game in games %}
    <a href="{{ game.slug }}/" class="game-link">
        <img src="{{ game.slug }}/{{ game.slug }}.gif" alt="{{ game.title }}">
    </a>
    {% endfor %}
    {% for i in range(coming_soon_slots) %}
    <div class="coming-soon">
        <img src="/images/bandageman-transparent.png" alt="">
        <span class="coming-soon-text">coming someday</span>
    </div>
    {% endfor %}
</div>
<footer style="text-align: center; margin-top: 40px; padding-bottom: 20px; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; color: white; font-size: 14px;">
    bandageman studios <span style="padding: 0 12px;">ü§ç</span> super-serious game development <span class="footer-heart-desktop" style="padding: 0 12px;">ü§ç</span><br class="footer-heart-mobile"> saint louis, missouri, u.s.a.
</footer>
{% endblock %}
